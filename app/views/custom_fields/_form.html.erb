<%= form_for(custom_field) do |f| %>
<div class="panel-body">
  <% if custom_field.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(custom_field.errors.count, "error") %> prohibited this custom_field from being saved:</h2>

      <ul>
      <% custom_field.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :label %>
    <%= f.text_field :label, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :type_id %>
    <%= collection_select :custom_field, :type_id, @type_all, :id, :value, {}, class: 'form-control' %>
  </div>

  <div id="custom_field_options_id" class="form-group">
    <%= f.fields_for :options do |fo| %>
      <%= render partial: 'option_fields', locals: { f: fo } %>
    <% end %>
    <%= link_to_add_association "#{t('buttons.add')} #{Option.model_name.human(count: 2)}", f, :options, class: 'btn btn-default' %>
  </div>
</div>
<div class="panel-footer">
  <%= f.submit t('buttons.save'), class: 'btn btn-primary' %>
  <%= link_to t('buttons.back'), custom_fields_path, class: 'btn btn-default' %>
</div>
<% end %>
