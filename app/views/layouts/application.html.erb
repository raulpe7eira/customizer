<!DOCTYPE html>
<html>
  <head>
    <title>Customizer</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/"><span class="glyphicon glyphicon-th-list" aria-hidden="true"></span> Customizer</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <% if user_signed_in? %>
              <li class="<%= 'active' if current_page?(contacts_path) %>" role="presentation">
                <%= link_to contacts_path do %>
                  <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                  <%= Contact.model_name.human(count: 2) %>
                <% end %>
              </li>
              <li class="<%= 'active' if current_page?(custom_fields_path) %>" role="presentation">
                <%= link_to custom_fields_path do %>
                  <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                  <%= CustomField.model_name.human(count: 2) %>
                <% end %>
              </li>
            <% end %>            
          </ul>
          <p class="navbar-form navbar-right">
            <% if user_signed_in? %>
              <%= t('labels.auth.logged_in_as_html', email: current_user.email) %>
              <%= link_to t('labels.auth.edit_profile'), edit_user_registration_path, :class => 'navbar-link' %> |
              <%= link_to t('labels.auth.logout'), destroy_user_session_path, method: :delete, :class => 'navbar-link' %>
            <% else %>
              <%= link_to t('labels.auth.sign_up'), new_user_registration_path, :class => 'navbar-link' %> |
              <%= link_to t('labels.auth.login'), new_user_session_path, :class => 'navbar-link'  %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
